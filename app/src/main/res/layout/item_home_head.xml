<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_4"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="@dimen/dp_4">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/ll_home_random"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10">
                <ImageView
                    android:id="@+id/iv_home_random"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:src="@drawable/home_today" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="佛系找剧"
                    android:textColor="@color/md_brown_400_color_code" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_home_top"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/iv_home_today"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:src="@drawable/home_top" />

                <TextView
                    android:id="@+id/tv_top_hot"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="热剧榜单"
                    android:textColor="@color/md_brown_400_color_code" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_home_update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/iv_home_update"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:src="@drawable/home_hot" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="最近更新"
                    android:textColor="@color/md_brown_400_color_code" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_home_zone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="10">

                <ImageView
                    android:id="@+id/iv_home_find"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:src="@drawable/home_find" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="个人中心"
                    android:textColor="@color/md_brown_400_color_code" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>